<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.merchant.manage.ShowQueueActivity"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        app:expanded="true">
        <com.google.android.material.appbar.MaterialToolbar
            style="@style/Widget.MaterialComponents.Toolbar.Surface"
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:title="Detail Antrean"/>
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.card.MaterialCardView
        style="@style/StandartCardView"
        android:id="@+id/cv_queue_info"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">
            <com.google.android.material.textview.MaterialTextView
                style="@style/TextViewBlackBold"
                android:id="@+id/tv_queue_number"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:textSize="45sp"
                android:text="Queue Number"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorGrey2"/>

            <com.google.android.material.textview.MaterialTextView
                style="@style/SubTextView"
                android:textSize="15sp"
                android:text="Nomor Induk Kependudukan (NIK)"/>
            <com.google.android.material.textview.MaterialTextView
                style="@style/TextViewBlackNormal"
                android:id="@+id/tv_identity_number"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="20sp"
                android:text="Nomor Induk Kependudukan (NIK)"/>

            <com.google.android.material.textview.MaterialTextView
                style="@style/SubTextView"
                android:textSize="15sp"
                android:text="Nama Lengkap"/>
            <com.google.android.material.textview.MaterialTextView
                style="@style/TextViewBlackNormal"
                android:id="@+id/tv_name"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="20sp"
                android:text="Nama Lengkap"/>

            <com.google.android.material.textview.MaterialTextView
                style="@style/SubTextView"
                android:textSize="15sp"
                android:text="Layanan"/>
            <com.google.android.material.textview.MaterialTextView
                style="@style/TextViewBlackNormal"
                android:id="@+id/tv_service_name"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="20sp"
                android:text="Layanan"/>

            <com.google.android.material.textview.MaterialTextView
                style="@style/SubTextView"
                android:textSize="15sp"
                android:text="Tanggal"/>
            <com.google.android.material.textview.MaterialTextView
                style="@style/TextViewBlackNormal"
                android:id="@+id/tv_schedule_date"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="20sp"
                android:text="Tanggal"/>

            <com.google.android.material.textview.MaterialTextView
                style="@style/SubTextView"
                android:textSize="15sp"
                android:text="Waktu"/>
            <com.google.android.material.textview.MaterialTextView
                style="@style/TextViewBlackNormal"
                android:id="@+id/tv_schedule_time"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="20sp"
                android:text="Waktu"/>

            <com.google.android.material.textview.MaterialTextView
                style="@style/SubTextView"
                android:textSize="15sp"
                android:text="Status"/>
            <com.google.android.material.textview.MaterialTextView
                style="@style/TextViewBlackNormal"
                android:id="@+id/tv_queue_status"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="20sp"
                android:text="Status"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="10dp"
        android:layout_below="@id/cv_queue_info"
        android:backgroundTint="@color/colorGreen"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="Mulai"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="10dp"
        android:layout_below="@id/btn_start"
        android:backgroundTint="@color/colorRed"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="Selesai"/>
</LinearLayout>