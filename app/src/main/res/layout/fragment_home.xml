<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.ui.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            style="@style/Widget.MaterialComponents.AppBarLayout.Surface"
            android:id="@+id/bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            app:elevation="0dp">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:clickable="true"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                app:cardForegroundColor="@android:color/transparent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">
                    <ImageView
                        android:id="@+id/icon_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_search_black"/>
                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextViewBlackBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/icon_search"
                        android:layout_centerInParent="true"
                        android:text="Cari tempat di sini..."
                        android:textColor="@color/colorPrimary"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:id="@+id/layout_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bar_layout"
            android:layout_above="@id/main_menu"
            android:orientation="vertical"
            android:background="@color/colorPrimary">
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/image_home_2"/>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/main_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            android:layout_alignParentBottom="true"
            app:cardCornerRadius="20dp"
            app:cardElevation="3dp"
            app:cardForegroundColor="@android:color/transparent">
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:columnCount="3"
                    android:rowCount="3"
                    android:alignmentMode="alignMargins">
                    <com.google.android.material.card.MaterialCardView
                        style="@style/CardHomeMenu"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:id="@+id/menu_bengkel">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp">
                            <androidx.appcompat.widget.AppCompatImageView
                                style="@style/IconMenu"
                                android:id="@+id/icon_menu_1"
                                android:src="@drawable/ic_bengkel"/>
                            <com.google.android.material.textview.MaterialTextView
                                style="@style/TextViewTitleMenu"
                                android:id="@+id/title_menu_1"
                                android:layout_below="@id/icon_menu_1"
                                android:text="Bengkel"/>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        style="@style/CardHomeMenu"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:id="@+id/menu_cuci_kendaraan">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp">
                            <androidx.appcompat.widget.AppCompatImageView
                                style="@style/IconMenu"
                                android:id="@+id/icon_menu_2"
                                android:src="@drawable/ic_cucimobil"/>
                            <com.google.android.material.textview.MaterialTextView
                                style="@style/TextViewTitleMenu"
                                android:id="@+id/title_menu_2"
                                android:layout_below="@id/icon_menu_2"
                                android:text="Cuci Mobil"/>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        style="@style/CardHomeMenu"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:id="@+id/menu_kecantikan">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp">
                            <androidx.appcompat.widget.AppCompatImageView
                                style="@style/IconMenu"
                                android:id="@+id/icon_menu_3"
                                android:src="@drawable/ic_kecantikan"/>
                            <com.google.android.material.textview.MaterialTextView
                                style="@style/TextViewTitleMenu"
                                android:id="@+id/title_menu_3"
                                android:layout_below="@id/icon_menu_3"
                                android:text="Kecantikan"/>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        style="@style/CardHomeMenu"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:id="@+id/menu_kesehatan">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp">
                            <androidx.appcompat.widget.AppCompatImageView
                                style="@style/IconMenu"
                                android:id="@+id/icon_menu_4"
                                android:src="@drawable/ic_kesehatan"/>
                            <com.google.android.material.textview.MaterialTextView
                                style="@style/TextViewTitleMenu"
                                android:id="@+id/title_menu_4"
                                android:layout_below="@id/icon_menu_4"
                                android:text="Kesehatan"/>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        style="@style/CardHomeMenu"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:id="@+id/menu_makanan">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp">
                            <androidx.appcompat.widget.AppCompatImageView
                                style="@style/IconMenu"
                                android:id="@+id/icon_menu_5"
                                android:src="@drawable/ic_makanan"/>
                            <com.google.android.material.textview.MaterialTextView
                                style="@style/TextViewTitleMenu"
                                android:id="@+id/title_menu_5"
                                android:layout_below="@id/icon_menu_5"
                                android:text="Makanan"/>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        style="@style/CardHomeMenu"
                        android:layout_row="1"
                        android:layout_column="2"
                        android:id="@+id/menu_pelayanan_publik">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp">
                            <androidx.appcompat.widget.AppCompatImageView
                                style="@style/IconMenu"
                                android:id="@+id/icon_menu_6"
                                android:src="@drawable/ic_pelayananpublik"/>
                            <com.google.android.material.textview.MaterialTextView
                                style="@style/TextViewTitleMenu"
                                android:id="@+id/title_menu_6"
                                android:layout_below="@id/icon_menu_6"
                                android:text="Publik"/>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        style="@style/CardHomeMenu"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:id="@+id/menu_pendidikan">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp">
                            <androidx.appcompat.widget.AppCompatImageView
                                style="@style/IconMenu"
                                android:id="@+id/icon_menu_7"
                                android:src="@drawable/ic_pendidikan"/>
                            <com.google.android.material.textview.MaterialTextView
                                style="@style/TextViewTitleMenu"
                                android:id="@+id/title_menu_7"
                                android:layout_below="@id/icon_menu_7"
                                android:text="Pendidikan"/>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        style="@style/CardHomeMenu"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:id="@+id/menu_perbankan">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp">
                            <androidx.appcompat.widget.AppCompatImageView
                                style="@style/IconMenu"
                                android:id="@+id/icon_menu_8"
                                android:src="@drawable/ic_perbankan"/>
                            <com.google.android.material.textview.MaterialTextView
                                style="@style/TextViewTitleMenu"
                                android:id="@+id/title_menu_8"
                                android:layout_below="@id/icon_menu_8"
                                android:text="Perbankan"/>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        style="@style/CardHomeMenu"
                        android:layout_row="2"
                        android:layout_column="2"
                        android:id="@+id/menu_umum">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp">
                            <androidx.appcompat.widget.AppCompatImageView
                                style="@style/IconMenu"
                                android:id="@+id/icon_menu_9"
                                android:src="@drawable/ic_umum"/>
                            <com.google.android.material.textview.MaterialTextView
                                style="@style/TextViewTitleMenu"
                                android:id="@+id/title_menu_9"
                                android:layout_below="@id/icon_menu_9"
                                android:text="Umum"/>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>
                </GridLayout>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>