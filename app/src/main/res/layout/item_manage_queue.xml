<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    app:cardElevation="3dp"
    app:cardCornerRadius="10dp"
    app:cardForegroundColor="@android:color/transparent"
    android:id="@+id/cv_queue">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">
        <com.google.android.material.textview.MaterialTextView
            style="@style/TextViewBlackBold"
            android:id="@+id/tv_queue_number"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            tools:text="Number"/>
        <com.google.android.material.textview.MaterialTextView
            style="@style/TextViewBlackBold"
            android:id="@+id/tv_service_name"
            android:layout_toStartOf="@id/tv_queue_number"
            android:textSize="18sp"
            tools:text="Service"/>
        <com.google.android.material.textview.MaterialTextView
            style="@style/TextViewBlackNormal"
            android:id="@+id/tv_schedule"
            android:layout_below="@id/tv_service_name"
            android:layout_toStartOf="@id/tv_queue_number"
            android:textSize="15sp"
            tools:text="Schedule"/>
        <com.google.android.material.textview.MaterialTextView
            style="@style/TextViewBlackBold"
            android:id="@+id/tv_queue_status"
            android:layout_below="@id/tv_schedule"
            android:layout_toStartOf="@id/tv_queue_number"
            android:textSize="15sp"
            tools:text="Queue Status"/>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>