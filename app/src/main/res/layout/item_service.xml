<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardForegroundColor="@android:color/transparent"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="0dp"
    android:id="@+id/cv_service">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">
        <com.google.android.material.textview.MaterialTextView
            style="@style/TextViewBlackBold"
            android:id="@+id/service_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/service_button"
            android:textSize="17sp"
            tools:text="@tools:sample/full_names"/>
        <com.google.android.material.textview.MaterialTextView
            style="@style/TextViewBlackNormal"
            android:id="@+id/service_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/service_button"
            android:layout_below="@id/service_name"
            android:textSize="15sp"
            tools:text="@tools:sample/lorem"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/service_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_navigate_next_black"
            android:tint="@color/colorBlack"/>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>